<h1>All Posts <span>
  <%= link_to "Create new", new_post_path %>
</span></h1>



<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if current_user %>
          <td><%= get_user_name_by_id post.user_id %></td>
        <% else %>
          <td> <%= link_to "Log in to see", login_path %></td>
        <% end %>
        <td><%=post.title%></td>
        <td><%=post.body%></td>
      </tr>
    <% end %>
  </tbody>
</table>
